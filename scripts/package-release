set -e
set -x

scriptDir=`dirname $0`
scriptDir=`cd $scriptDir; pwd`
baseDir=$scriptDir/..
baseDir=`cd $baseDir; pwd`
xcodebuild clean build
version=$(defaults read "$baseDir/build/Release/Space Dock.app/Contents/Info" CFBundleShortVersionString)
versionDash=$(echo $version | sed 's/\./-/g')
build_number=$(defaults read "$baseDir/build/Release/Space Dock.app/Contents/Info" CFBundleVersion)
encodedName="space_dock_b$build_number"
archiveName=$encodedName.zip
cd $baseDir/build/Release
zip --symlinks -r -q $archiveName "Space Dock".app
