set -e
set -x

scriptDir=`dirname $0`
scriptDir=`cd $scriptDir; pwd`
baseDir=$scriptDir/..
baseDir=`cd $baseDir; pwd`
siteDir=$baseDir/spacedocksite
siteDir=`cd $siteDir; pwd`
version=$(defaults read "$baseDir/build/Viper Dock.app/Contents/Info" CFBundleShortVersionString)
versionDash=$(echo $version | sed 's/\./-/g')
build_number=$(defaults read "$baseDir/build/Viper Dock.app/Contents/Info" CFBundleVersion)
encodedName="viper_dock_b$build_number"
fullVersion=$version
archiveName=$encodedName.zip
cd $baseDir/build
zip --symlinks -r -q $archiveName "Viper Dock".app
xattr -w sd-version "$version" $archiveName
xattr -w sd-build-number "$build_number" $archiveName
cp $archiveName $siteDir/viper/
